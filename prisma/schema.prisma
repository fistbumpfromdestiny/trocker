generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum LocationType {
  APARTMENT
  OUTDOOR
  BUILDING_COMMON
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  name          String?
  passwordHash  String?     // Optional - OAuth users won't have passwords
  image         String?     // Profile image from OAuth provider
  role          Role        @default(USER)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  apartments       Apartment[]
  locationReports  LocationReport[]
  locationReportsV2 LocationReportV2[]
  messages         Message[]
  messageRead      MessageRead?
  accounts         Account[]   // OAuth accounts
  sessions         Session[]

  @@index([email])
}

// OAuth accounts table (managed by NextAuth)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User invitations sent by admins
model UserInvite {
  id        String   @id @default(cuid())
  email     String   @unique
  token     String   @unique
  createdBy String   // Admin who sent the invite
  status    InviteStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime @default(now())
  usedAt    DateTime?

  @@index([email])
  @@index([token])
  @@index([status])
}

// Pending user applications (OAuth attempts)
model PendingUser {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  image             String?
  provider          String   // "google", etc.
  providerAccountId String
  status            ApplicationStatus @default(PENDING)
  createdAt         DateTime @default(now())
  reviewedAt        DateTime?
  reviewedBy        String?  // Admin who approved/rejected

  @@index([email])
  @@index([status])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

model Cat {
  id              String    @id @default(cuid())
  name            String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  locationReports   LocationReport[]
  locationReportsV2 LocationReportV2[]

  @@index([name])
}

model Apartment {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  locationId  String?  // Optional - apartment is part of a building/location
  displayOrder Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  location           Location?          @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationReports    LocationReport[]
  locationReportsV2  LocationReportV2[]

  @@unique([userId]) // Only one apartment per user
  @@unique([locationId, name]) // Each apartment name unique within a building
  @@index([locationId])
}

model OutdoorLocation {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  locationReports LocationReport[]
}

model LocationReport {
  id            String       @id @default(cuid())
  catId         String
  userId        String?      // Optional - null if user deleted
  locationType  LocationType

  apartmentId       String?
  outdoorLocationId String?
  buildingAreaName  String?

  entryTime     DateTime
  exitTime      DateTime?
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  cat             Cat              @relation(fields: [catId], references: [id], onDelete: Cascade)
  user            User?            @relation(fields: [userId], references: [id], onDelete: SetNull)
  apartment       Apartment?       @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  outdoorLocation OutdoorLocation? @relation(fields: [outdoorLocationId], references: [id], onDelete: Cascade)

  @@index([catId, entryTime])
  @@index([userId])
  @@index([apartmentId])
  @@index([outdoorLocationId])
}

model AppSettings {
  id                    String   @id @default(cuid())
  key                   String   @unique
  value                 String
  description           String?
  updatedAt             DateTime @updatedAt

  @@index([key])
}

model Location {
  id          String       @id @default(cuid())
  externalId  String       @unique  // e.g., "building-10", "park-nw"
  name        String
  description String?
  type        LocationType

  // Grid positioning (percentage-based)
  gridTop     String       // e.g., "33.33%"
  gridLeft    String       // e.g., "50%"
  gridWidth   String       // e.g., "16.66%"
  gridHeight  String       // e.g., "16.66%"

  isActive    Boolean      @default(true)
  displayOrder Int         @default(0)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  apartments         Apartment[]
  locationReportsNew LocationReportV2[]

  @@index([externalId])
  @@index([type])
}

// New version of LocationReport that uses the Location and Apartment models
model LocationReportV2 {
  id          String    @id @default(cuid())
  catId       String
  userId      String?   // Optional - null if user deleted
  locationId  String
  apartmentId String?   // Optional - only if location has apartments (buildings)

  entryTime  DateTime
  exitTime   DateTime?
  notes      String?

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  cat       Cat        @relation(fields: [catId], references: [id], onDelete: Cascade)
  user      User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  location  Location   @relation(fields: [locationId], references: [id], onDelete: Cascade)
  apartment Apartment? @relation(fields: [apartmentId], references: [id], onDelete: SetNull)

  @@index([catId, entryTime])
  @@index([userId])
  @@index([locationId])
  @@index([apartmentId])
}

model Message {
  id        String    @id @default(cuid())
  content   String    @db.Text
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Reply functionality - store snapshot of original message
  replyToId      String?  // ID of message being replied to
  replyToContent String?  @db.Text // Snapshot of original content
  replyToUserName String? // Snapshot of original sender's name

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([deletedAt])
  @@index([replyToId])
}

model MessageRead {
  id         String   @id @default(cuid())
  userId     String   @unique
  lastReadAt DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
