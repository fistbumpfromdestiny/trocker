generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum LocationType {
  APARTMENT
  OUTDOOR
  BUILDING_COMMON
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  name          String?
  passwordHash  String
  role          Role        @default(USER)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  apartments       Apartment[]
  locationReports  LocationReport[]
  locationReportsV2 LocationReportV2[]

  @@index([email])
}

model Cat {
  id              String    @id @default(cuid())
  name            String
  hungerLevel     Int       @default(0)
  lastFedAt       DateTime?
  lastHungerUpdate DateTime @default(now())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  locationReports   LocationReport[]
  locationReportsV2 LocationReportV2[]

  @@index([name])
}

model Apartment {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  locationId  String?  // Optional - apartment is part of a building/location
  displayOrder Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  location           Location?          @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationReports    LocationReport[]
  locationReportsV2  LocationReportV2[]

  @@unique([locationId, name]) // Each apartment name unique within a building
  @@index([userId])
  @@index([locationId])
}

model OutdoorLocation {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  locationReports LocationReport[]
}

model LocationReport {
  id            String       @id @default(cuid())
  catId         String
  userId        String
  locationType  LocationType

  apartmentId       String?
  outdoorLocationId String?
  buildingAreaName  String?

  entryTime     DateTime
  exitTime      DateTime?
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  cat             Cat              @relation(fields: [catId], references: [id], onDelete: Cascade)
  user            User             @relation(fields: [userId], references: [id])
  apartment       Apartment?       @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  outdoorLocation OutdoorLocation? @relation(fields: [outdoorLocationId], references: [id], onDelete: Cascade)

  @@index([catId, entryTime])
  @@index([userId])
  @@index([apartmentId])
  @@index([outdoorLocationId])
}

model AppSettings {
  id                    String   @id @default(cuid())
  key                   String   @unique
  value                 String
  description           String?
  updatedAt             DateTime @updatedAt

  @@index([key])
}

model Location {
  id          String       @id @default(cuid())
  externalId  String       @unique  // e.g., "building-10", "park-nw"
  name        String
  description String?
  type        LocationType

  // Grid positioning (percentage-based)
  gridTop     String       // e.g., "33.33%"
  gridLeft    String       // e.g., "50%"
  gridWidth   String       // e.g., "16.66%"
  gridHeight  String       // e.g., "16.66%"

  isActive    Boolean      @default(true)
  displayOrder Int         @default(0)

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  apartments         Apartment[]
  locationReportsNew LocationReportV2[]

  @@index([externalId])
  @@index([type])
}

// New version of LocationReport that uses the Location and Apartment models
model LocationReportV2 {
  id          String    @id @default(cuid())
  catId       String
  userId      String
  locationId  String
  apartmentId String?   // Optional - only if location has apartments (buildings)

  entryTime  DateTime
  exitTime   DateTime?
  notes      String?

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  cat       Cat        @relation(fields: [catId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id])
  location  Location   @relation(fields: [locationId], references: [id], onDelete: Cascade)
  apartment Apartment? @relation(fields: [apartmentId], references: [id], onDelete: SetNull)

  @@index([catId, entryTime])
  @@index([userId])
  @@index([locationId])
  @@index([apartmentId])
}
